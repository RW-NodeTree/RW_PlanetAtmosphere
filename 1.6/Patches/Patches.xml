<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>*/BiomeDef[defName="Ocean" or defName="Lake"]/texture</xpath>
		<value>
			<texture>TerrainReplace/Water</texture>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>*/GlobalWorldDrawLayerDef[worldDrawLayer="GlobalDrawLayer_Sun"]</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>*/PlanetLayerDef/worldDrawLayers/li[.="WorldDrawLayer_Glow" or .="WorldDrawLayer_Clouds"]</xpath>
	</Operation>

</Patch>

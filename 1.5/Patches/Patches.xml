<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>*/BiomeDef[defName="Ocean" or defName="Lake"]/texture</xpath>
		<value>
			<texture>TerrainReplace/Water</texture>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>*/GlobalWorldDrawLayerDef[worldDrawLayer="WorldLayer_Sun" or worldDrawLayer="WorldLayer_Glow"]</xpath>
	</Operation>

</Patch>
